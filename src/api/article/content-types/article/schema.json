{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "intro": {
      "type": "string"
    },
    "body": {
      "type": "richtext"
    },
    "cover": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "images": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "article_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article-category.article-category",
      "inversedBy": "articles"
    }
  }
}
